<div property="schema:itemListElement" typeof="schema:ListItem" class="noted section">
  <meta property="schema:position" content="<%= "#{position + 1}" %>" />
  <article property="schema:item" resource="<%= path_to(item) %>#blogpost" typeof="schema:BlogPost" class="excerpt">
    <div class="bd">
      <h2 class="bigger">
        <a property="schema:url" rel="bookmark" title="Full article" href="<%= path_to(item) %>"><span property="dc:title schema:name"><%= item[:title] %></span></a>
      </h2>
      <p property="schema:description"><%= item[:description] %></p>
    </div>
    <%= render('/blog/partials/created_on.*', item: item) %>
    <link property="schema:isPartOf" resource="pentandra-blog:blog" />
    <link property="rdfa:copy" resource="pentandra-website:license" />
  </article>
</div>
