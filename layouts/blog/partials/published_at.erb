<footer class="aside pubdate section">
  <% if item[:published_at] %>
    <time class="big" property="schema:datePublished" datetime="<%= h simple_date(:published_at, item: item) %>"><%= ndashed(simple_date(:published_at, item: item)) %></time>
  <% else %>
    <time class="big draft" property="schema:dateCreated" datetime="<%= h simple_date(:created_at, item: item) %>"><i><%= ndashed(simple_date(:created_at, item: item)) %></i></time>
  <% end %>
</footer>
