<footer class="aside pubdate section">
  <% if item[:published_at] %>
    <time class="big" property="schema:datePublished" datetime="<%= h publication_date_for(item) %>"><%= ndashed(publication_date_for(item)) %></time>
  <% else %>
    <time class="big draft" property="schema:dateCreated" datetime="<%= h date_for(item) %>"><i><%= ndashed(date_for(item)) %></i></time>
  <% end %>
</footer>
