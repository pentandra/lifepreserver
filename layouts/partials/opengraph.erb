<%# for the archaic, proprietary, and limited Open Graph Protocol http://ogp.me/ %>
<meta property="og:title" content="<%= @item[:title] %>" />
<meta property="og:description" content="<%= @item[:description] %>" />
<meta property="og:site_name" content="<%= @config[:site][:name] %>" />
<meta property="og:url" content="<%= h path_to(@item, global: true) %>" />
<meta property="og:locale" content="en_US" />
<% if @item.key?(:cover_image) %>
  <meta property="og:image" content="<%= h path_to(@items[@item[:cover_image][:id]], global: true) %>" />
<% end %>
<% if blog_post?(@item) %>
  <meta property="og:type" content="article" />
  <meta property="article:published_time" content="<%= h simple_date(@item.fetch(:created_at)) %>" />
  <meta property="article:modified_time" content="<%= h simple_date(@item.fetch(:updated_at)) %>" />
  <%# TODO: article:author %>
  <% Array(@item[:tags]).each do |tag| %>
    <meta property="article:tag" content="<%= h tag %>" />
  <% end %>
<% else %>
  <meta property="og:type" content="website" />
<% end %> 
