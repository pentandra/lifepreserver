  <head prefix="<%= prefix_mappings_for(*OPEN_GRAPH_PREFIXES) %>">

    <meta charset="utf-8" />
    <title><%= @item[:title] %> ‚Üê <%= @config[:site][:name] %></title>
    <meta name="description" content="<%= @item[:meta_description] || @item[:description] || @item[:title] %>" />
    <meta name="generator" content="Nanoc <%= Nanoc::VERSION.to_s %>" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <%= render('/partials/opengraph.*') %>

    <%= render('/partials/twittercard.*') %>

    <script src="/js/modernizr.custom.40730.js"></script>

    <%= render('/blog/partials/atom-discovery.*') %>

    <% for p in @item.fetch(:head, []) %>
      <%= render("/partials/#{p}.*") %>
    <% end %>

  </head>

  <body prefix="<%= prefix_mappings_for(*STANDARD_PREFIXES, *COMPANY_PREFIXES, :deo, :doap) %>" about="" property="schema:isPartOf" resource="pentandra-website:website" typeof="schema:WebPage cc:Work prov:Entity">

    <% for p in @item.fetch(:beginbody, []) %>
      <%= render("/partials/#{p}.*") %>
    <% end %>

    <%= yield %>

    <script src="/js/all.js"></script>

    <% for p in @item.fetch(:endbody, []) %>
      <%= render("/partials/#{p}.*") %>
    <% end %>

    <%= content_for(@item, :javascripts) %>

    <%= render('/partials/devtools.*') unless @config[:production] %>

  </body>

</html>
